@model dynamic

@{
    ViewData["Title"] = "Главная страница";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Добро пожаловать!</h1>

    <div class="row g-4">
        <!-- Клиенты -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title m-0">Клиенты</h4>
                    <a asp-controller="Customer" asp-action="Index" class="btn btn-outline-primary btn-sm">Добавить клиента</a>
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var customer in Model.Customers)
                    {
                        <li class="list-group-item">
                            <strong>@customer.FullName</strong><br />
                            <small class="text-muted">Телефон: @customer.PhoneNumber</small><br />
                            <small class="text-muted">Организация: @customer.OrganizationName</small>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- Материалы -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title m-0">Материалы</h4>
                    <a asp-controller="Material" asp-action="Index" class="btn btn-outline-primary btn-sm">Добавить материал</a>
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var material in Model.Materials)
                    {
                        <li class="list-group-item">
                            <strong>@material.Name</strong><br />
                            <small class="text-muted">Описание: @material.Description</small><br />
                            <small class="text-muted">Количество: @material.Quantity</small>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- Заказы -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title m-0">Заказы</h4>
                    <a asp-controller="Order" asp-action="Index" class="btn btn-outline-primary btn-sm">Добавить заказ</a>
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var order in Model.Orders)
                    {
                        <li class="list-group-item">
                            <strong>@order.Name</strong><br />
                            <small class="text-muted">Цена: @order.Price руб.</small><br />
                            <small class="text-muted">Тип краски: @order.TypeOfPaint</small>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
