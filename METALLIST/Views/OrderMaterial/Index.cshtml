@model IEnumerable<METALLIST.Models.OrderMaterial>

@{
    ViewData["Title"] = "Материалы к заказам";
}

<h2>Материалы к заказам</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Заказ</th>
            <th>Описание заказа</th>
            <th>Материал</th>
            <th>Описание материала</th>
            <th>Количество</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Order?.Name</td>
                <td>@item.Order?.Description</td>
                <td>@item.Material?.Name</td>
                <td>@item.Material?.Description</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </tbody>
</table>
