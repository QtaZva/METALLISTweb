@model METALLIST.Models.User

@{
    ViewData["Title"] = "Регистрация";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1 class="text-center mb-4">Регистрация</h1>
            <form method="post" asp-action="Register" class="shadow p-4 rounded bg-light">
                <div class="form-group mb-3">
                    <label for="username" class="form-label">Логин:</label>
                    <input type="text" class="form-control" asp-for="Login" required placeholder="Введите логин" />
                </div>
                <div class="form-group mb-3">
                    <label for="password" class="form-label">Пароль:</label>
                    <input type="password" class="form-control" asp-for="Password" required placeholder="Введите пароль" />
                </div>
                <div class="form-group mb-3">
                    <label for="name" class="form-label">ФИО:</label>
                    <input type="text" class="form-control" asp-for="Name" required placeholder="Введите ФИО" />
                </div>
                <button type="submit" class="btn btn-primary w-100 mb-3">Зарегистрироваться</button>
            </form>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @ViewBag.Error
                </div>
            }
        </div>
    </div>
</div>

