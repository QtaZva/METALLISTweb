@{
    ViewData["Title"] = "Авторизация";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1 class="text-center mb-4">Вход</h1>
            <form method="post" class="shadow p-4 rounded bg-light">
                <div class="form-group mb-3">
                    <label for="username" class="form-label">Логин:</label>
                    <input type="text" class="form-control" id="username" name="username" required placeholder="Введите ваш логин" />
                </div>
                <div class="form-group mb-3">
                    <label for="password" class="form-label">Пароль:</label>
                    <input type="password" class="form-control" id="password" name="password" required placeholder="Введите ваш пароль" />
                </div>
                <button type="submit" class="btn btn-primary w-100 mb-3">Войти</button>
                <a asp-action="Register" asp-controller="Account" class="btn btn-primary w-100">Регистрация</a>
            </form>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @ViewBag.Error
                </div>
            }
        </div>
    </div>
</div>
