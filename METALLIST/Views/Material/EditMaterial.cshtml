@model METALLIST.Models.Material

@{
    ViewData["Title"] = "Изменить данные материала";
}

<h1>Изменить данные материала</h1>

<h4>Материал</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditMaterial" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label class="form-label">Название</label>
                <input type="text" asp-for="Name" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Описание</label>
                <input type="text" asp-for="Description" class="form-control"/>
            </div>
            <div class="mb-3">
                <label class="form-label">Количество</label>
                <input type="text" asp-for="Quantity" class="form-control" />
            </div>
            <button type="submit" class="btn btn-success">Сохранить</button>
        </form>
    </div>
</div>

